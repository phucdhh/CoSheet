/* Additional styling for Sheet and Help menus to match SocialCalc interface */

/* Make ec-tabmenu blend with SocialCalc tabs */
.ec-tabmenu {
    position: relative;
    padding: 4px 12px;
    color: #333;
    background: #f5f5f5;
    border: 1px solid #ccc;
    border-bottom: none;
    cursor: pointer;
    font-size: 11px;
    font-family: Arial, Helvetica, sans-serif;
    font-weight: normal;
    vertical-align: bottom;
    white-space: nowrap;
}

.ec-tabmenu:hover {
    background: #fff;
    color: #000;
}

.ec-tabmenu.ec-open {
    background: #fff;
   color: #000;
    border-bottom: 1px solid #fff;
    z-index: 1000;
}

/* Submenu styling */
.ec-tabmenu > .ec-submenu {
    position: absolute;
    left: -1px;
    top: 100%;
    min-width: 150px;
    background: #fff;
    color: #333;
    border: 1px solid #ccc;
    box-shadow: 2px 2px 4px rgba(0,0,0,0.1);
    padding: 4px 0;
    display: none;
    z-index: 999;
    list-style: none;
    margin: 0;
}

.ec-tabmenu.ec-open > .ec-submenu,
.ec-tabmenu:hover > .ec-submenu {
    display: block;
}

.ec-submenu {
    list-style: none;
    margin: 0;
    padding: 0;
}

.ec-subitem {
    padding: 5px 15px;
    white-space: nowrap;
    cursor: pointer;
    font-size: 11px;
}

.ec-subitem a {
    color: inherit;
    text-decoration: none;
    display: block;
}

.ec-subitem:hover {
    background: #e8f0ff;
    color: #000;
}

/* Make sure menus don't break on small screens */
@media (max-width: 800px) {
    .ec-tabmenu {
        font-size: 10px;
        padding: 3px 8px;
    }
    
    .ec-subitem {
        font-size: 10px;
        padding: 4px 12px;
    }
}
